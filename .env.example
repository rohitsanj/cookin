# LLM
LLM_PROVIDER=openai          # openai | anthropic | google | openai-compatible
LLM_API_KEY=sk-...
LLM_MODEL=gpt-4o             # model ID (provider-specific)
LLM_BASE_URL=                 # optional, for openai-compatible endpoints (e.g. Ollama, Together, Groq)

# Meal plan LLM (optional â€” defaults to main LLM settings above)
MEAL_PLAN_LLM_PROVIDER=openai
MEAL_PLAN_LLM_API_KEY=        # defaults to LLM_API_KEY if empty
MEAL_PLAN_LLM_MODEL=gpt-4o-search-preview
MEAL_PLAN_LLM_BASE_URL=       # defaults to LLM_BASE_URL if empty

# Server
PORT=3000
DATABASE_PATH=./data/cookin.db

# Google OAuth
GOOGLE_CLIENT_ID=             # Google OAuth client ID
GOOGLE_CLIENT_SECRET=         # Google OAuth client secret (needed for Calendar API)
